<%- include('header-part') %>
<%- include('navbarIsLogin') %>


<body>
    
  <div class="row" style="margin-top: 4%;">
    <div class="col-sm"></div>
    <div class="col-sm">
      <h1>Add Student</h1>
      <form action="/admin/student/add" method="POST">
        <label for="fname">First name:</label>
        <input class="form-control" type="text" id="fname" name="fname"><br>
        <label for="lname">Last name:</label>
        <input class="form-control" type="text" id="lname" name="lname"><br>
    
        <label for="kelas">Class:</label>
        <select class="form-select" name="kelas" id="kelas">
          <option value="10-IPA">10-IPA</option>
          <option value="10-IPS">10-IPS</option>
          <option value="11-IPA">11-IPA</option>
          <option value="11-IPS">11-IPS</option>
        </select><br><br>
    
        <label for="tipe">Class Music:</label>
        <select class="form-select" name="tipe" id="tipe">
          <% dataInstrument.forEach(el => {%>
          <option value="<%= el.id %>"><%=el.tipe%></option>
          <% }) %>
        </select><br>
    
        <label for="radio">Gender:</label><br>
        <input type="radio" id="male" name="gender" value="male">
        <label for="male">Male</label><br>
        <input type="radio" id="female" name="gender" value="female">
        <label for="female">Female</label><br><br>
    
        <label for="">Email</label><br>
        <input class="form-control" type="email" name="email" id="" placeholder="name@example.com">
    
        <br>
    
        <button type="submit" class="btn btn-success">Add Student</button>
        <button class="btn btn-secondry" type="submit"><a href="/admin/student">Cancel</a></button>

    </div>
    <div class="col-sm"></div>
  </div>

  
  </form>
</body>
</html>